            }
          }
        },
        "responses": {
          "200": {
            "description": "Success Generate Access Token",
            "headers": {
              "Set-Cookie": {
                "schema": {
                  "type": "string",
                  "example": "jid=abcdef1234"
                }
              }
            },
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
